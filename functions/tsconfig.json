{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "lib": ["es2020"],
    "esModuleInterop": true,  // Enable esModuleInterop
    "skipLibCheck": true,

  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
